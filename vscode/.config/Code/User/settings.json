{
    "workbench.colorTheme": "Catppuccin Mocha",
    "workbench.iconTheme": "catppuccin-mocha",
    "editor.fontFamily": "'JetBrainsMono Nerd Font', 'Symbols Nerd Font Mono', 'Droid Sans Mono', 'monospace', monospace",
    "notebook.lineNumbers": "on",
    "lazygit-vscode.autoMaximizeWindow": true,
    "lazygit-vscode.panels": {
        "panel": "hide",
        "sidebar": "hide"
    },
    "workbench.editor.editorActionsLocation": "default",
    "workbench.activityBar.location": "top",
    "workbench.sideBar.location": "right",
    "update.showReleaseNotes": false,
    "window.titleBarStyle": "native",
    "window.commandCenter": false,
    "vscode_custom_css.imports": [
        "file://${userHome}/.vscode/extensions/brandonkirbyson.vscode-animations-2.0.7/dist/updateHandler.js",
        "file://${userHome}/.config/Code/User/custom.css"
    ],
    "catppuccin.accentColor": "blue",
    "catppuccin.bracketMode": "neovim",
    "catppuccin.workbenchMode": "flat",
    "catppuccin.customUIColors": {
        "mocha": {
            "editorGroupHeader.tabsBackground":"mantle",
            "editorWidget.background": "mantle",
            "panel.background": "mantle",
            "sideBar.background": "mantle",
            "statusBar.background": "mantle",
            "statusBar.debuggingBackground": "mantle",
            "statusBar.noFolderBackground": "mantle",
            "statusBarItem.remoteBackground": "mantle",
            "tab.border": "mantle",
            "tab.inactiveBackground": "mantle",
            
            "titleBar.activeBackground": "mantle",
            "titleBar.inactiveBackground": "mantle",
            "terminal.border": "mantle",
        }
    },
    "workbench.colorCustomizations": {
        "activityBarBadge.foreground": "#ffffffbf",
        "activityBarBadge.background": "#3c3c3ca3",
    //     "editor.lineHighlightBackground": "#26282d",
    //     "editor.lineHighlightBorder": "#00000000",
        "editorBracketMatch.background": "#43454a",
        "editorBracketMatch.border": "#00000000",
        // "editorGroupHeader.tabsBackground": "#181825",
        "editorGutter.background": "#00000000",
        // "editorWidget.background": "#181825",
        "focusBorder": "#00000000",
        // "panel.background": "#181825",
        // "sideBar.background": "#181825",
        "sideBarSectionHeader.border": "#00000000",
        "panel.border": "#00000000",
        "sideBar.border": "#00000000",
        
        // "statusBar.background": "#181825",
        // "statusBar.debuggingBackground": "#181825",
        // "statusBar.noFolderBackground": "#181825",
        "statusBar.debuggingForeground": "#89b4fa",
        "statusBar.foreground": "#89b4fa",
        // "statusBarItem.remoteBackground": "#181825",
        "statusBarItem.remoteForeground": "#757575",

        "gitDecoration.modifiedResourceForeground": "#fab387",
        "gitDecoration.stageModifiedResourceForeground": "#a6e3a1",
        "gitDecoration.addedResourceForeground": "#a6e3a1",
        "gitDecoration.renamedResourceForeground": "#89b4fa",
        "gitDecoration.untrackedResourceForeground": "#f38ba8",
        "gitDecoration.ignoredResourceForeground": "#ffffff3b",
        "tab.activeBorderTop": "#00000000",
        // "tab.border": "#181825",
        // "tab.inactiveBackground": "#181825",
        
        // "titleBar.activeBackground": "#181825",
        // "titleBar.inactiveBackground": "#181825",
        "panelTitle.activeBorder":"#89b4fa",
        "panelTitle.activeForeground":"#89b4fa",
        "terminal.background": "#1E1E2E",
        // "terminal.border": "#181825",

        "editorOverviewRuler.background": "#00000000",
        "editorOverviewRuler.border": "#00000000",
        // "scrollbar.shadow": "#00000072",
        "scrollbarSlider.background": "#ffffff10",
        "scrollbarSlider.activeBackground": "#ffffff12",
        "scrollbarSlider.hoverBackground":"#6c7086",
        "editorStickyScroll.background":"#1E1E2E7E",
        "editorStickyScroll.border": "#1E1E2E",
        "minimap.background": "#00000000",
        // "minimap.foregroundOpacity":"#000000c0"
    },
    "editor.stickyScroll.defaultModel": "foldingProviderModel",
    "editor.stickyScroll.maxLineCount": 3,
    "editor.scrollbar.vertical": "auto",
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.verticalScrollbarSize":12,
    "editor.minimap.autohide": true,
    "editor.minimap.renderCharacters": false,
    "chat.commandCenter.enabled": false,
    "outline-map.follow": "cursor",
    "editor.overviewRulerBorder": true,
    "editor.hideCursorInOverviewRuler": true,
    "window.menuBarVisibility": "toggle",
    "window.dialogStyle": "custom",
    "window.experimentalControlOverlay": false,
    "window.zoomLevel": 1.5,
    "window.restoreWindows": "none",
    "files.hotExit": "off",
    "editor.tabSize": 4,
    "editor.fontSize": 16,
    "workbench.tree.indent": 12,
    "workbench.tree.renderIndentGuides": "none",
    "workbench.editor.tabActionCloseVisibility": false,
    "editor.padding.top": 14,
    "editor.padding.bottom": 14,
    // "editor.codeLens": false,
    "editor.foldingHighlight": false,
    "editor.renderLineHighlight": "gutter",
    "editor.lineNumbers": "relative",
    "editor.guides.indentation": false,
    "editor.guides.highlightActiveIndentation": false,
    "editor.guides.bracketPairs": "active",
    "editor.guides.bracketPairsHorizontal": true,
    "editor.matchBrackets": "near",
    "editor.guides.highlightActiveBracketPair": false,
    "editor.smoothScrolling": true,
    "editor.semanticHighlighting.enabled": true,
    "window.autoDetectHighContrast": false,
    "editor.lineHeight": 24,
    // "editor.inlayHints.enabled": "off"
    // "explorer.openEditors.visible": 1
    // "explorer.autoReveal": "focusNoScroll"
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": "on",
    "workbench.startupEditor": "none",
    "animations.Active": "Indent",
    "animations.Default-Duration": 150,
    "animations.Scrolling": "Fade",
    "window.customTitleBarVisibility": "never",
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.tabs.hideCondition": "never",
    // "terminal.integrated.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 5,
    "workbench.editor.limit.excludeDirty": true,
    "explorer.autoReveal": "focusNoScroll",
    "update.mode": "none",
    "window.title": "${dirty}${rootName}${separator}${activeEditorShort}${separator}${appName}"
    // "explorer.sortOrder": "type",
}